<!doctype html>
<html lang="<%= site.data.site_metadata.lang %>">
  <head>
    <%= render "head", metadata: site.data.site_metadata, title: page.data.title %>
  </head>
  <body class="<%= page.data.layout %>">
    <%= render "header", metadata: site.data.site_metadata %>

    <main class="main">
      <%= yield %>
    </main>

    <%= render "footer", metadata: site.data.site_metadata %>
  </body>
</html>
