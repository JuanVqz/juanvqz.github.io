<!doctype html>
<html lang="en">
  <head>
    {% render "head", metadata: site.metadata, title: page.title %}
  </head>
  <body class="{{ page.layout }} {{ page.page_class }} min-h-screen flex flex-col mx-auto container">
    {% render "navbar", metadata: site.metadata, page: page %}

    <main class="flex-1 p-4 md:p-6">
      {{ content }}
    </main>

    {% render "footer", metadata: site.metadata %}
  </body>
</html>
